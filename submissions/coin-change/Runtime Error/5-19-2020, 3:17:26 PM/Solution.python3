// https://leetcode.com/problems/coin-change

class Solution:
    def coinChange(self, coins, amount):
        coins = sorted(coins)
        dp = [float('inf')] * (amount + 1)
        for coin in coins:
            dp[coin] = 1
        for i in range(amount + 1):
            for coin in coins:
                if i - coin < 0:
                    break
                dp[i] = min(dp[i - coin] + 1, dp[i])
        if dp[-1] == float('inf'):
            return -1
        return dp[-1]

        