// https://leetcode.com/problems/validate-binary-search-tree

# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution:
    def isValidBST(self, root: TreeNode) -> bool:
        if self.check_nodes(root):
            return True
        else:
            return False
        
    def check_nodes(self, node):
        if node.left is None or node.right is None:
            return True
        left_val = node.left.val
        right_val = node.right.val
        if (left_val<node.val and node.val<right_val):
            return (self.check_nodes(node.left) and self.check_nodes(node.right))
        else:
            return False
        