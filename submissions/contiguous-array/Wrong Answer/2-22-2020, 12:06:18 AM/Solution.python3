// https://leetcode.com/problems/contiguous-array

class Solution:
    def findMaxLength(self, nums):
        nums = [-1 if num==0 else 1 for num in nums]
        nums = [0] + nums
        cum_sum = [0] * len(nums)
        min_zero_idx = 0
        max_zero_idx = 0
        for i in range(1, len(nums)):
            cum_sum[i] = cum_sum[i-1] + nums[i]
            if cum_sum[i] == 0:
                max_zero_idx = i
        return max_zero_idx - min_zero_idx
    