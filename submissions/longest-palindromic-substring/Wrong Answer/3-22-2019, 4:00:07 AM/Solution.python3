// https://leetcode.com/problems/longest-palindromic-substring

class Solution:
    def longestPalindrome(self, s):
        left_str, right_str = '', ''
        if len(s)==1:
            return left_str + s + right_str
        elif s[0]==s[-1]:
            left_str += s[0]
            right_str = s[-1] + right_str
            return longestPalindrome(self, s[1:-1])
        else:
            return longestPalindrome(self, s[1:-1])
            
        