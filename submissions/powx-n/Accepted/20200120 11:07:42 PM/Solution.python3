// https://leetcode.com/problems/powx-n

class Solution:
    def power(self, x, n):
        if n==0:
            return 1
        half = self.power(x, n//2)
        if n%2==1:
            return x * half * half
        else:
            return half * half
    
    def myPow(self, x, n):
        if x==0:
            return 0
        
        res = self.power(x, abs(n))
        if n < 0:
            return 1/res
        else:
            return res