// https://leetcode.com/problems/powx-n

class Solution:
    def myPow(self, x: float, n: int) -> float:
        if n==0:
            return 1.0
        if n<0:
            ans = 1/x
        else:
            ans = x
        
        tmp = 1.0
        while n!=1:
            if n%2==1:
                tmp *= ans
            n = n//2
            ans *= ans
            
        return tmp * ans