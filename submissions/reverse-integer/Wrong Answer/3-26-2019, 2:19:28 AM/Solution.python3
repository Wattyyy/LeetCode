// https://leetcode.com/problems/reverse-integer

class Solution:
    def reverse(self, x):
        
        # corner case
        if x > (2**31-1) or x < -2**31:
            return 0
    
        if x > 0:
            sign = 1
        else:
            sign = -1
        
        ans = str(abs(x))[::-1]
        return int(ans) * sign
        
        
        