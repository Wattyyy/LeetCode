// https://leetcode.com/problems/reverse-integer

class Solution:
    def reverse(self, x): 
        
        ans = str(abs(x))[::-1]
    
        if x > 0:
            if int(ans) > (2**31-1):
                return 0
            else:
                return int(ans)        
            
        else:
            if -1*int(ans) < -2**31:
                return 0
            else:
                return -1*int(ans)  
            
        
        
        
        
        
        
        